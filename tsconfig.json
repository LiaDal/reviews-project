{
  "include": [
    "src",
    "src/index.tsx",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "types": [
      "node",
      "vite/client"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "dom.iterable"
    ],
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "typeRoots": [
      "src/client/declaration.d.tsx",
      "./types",
      "./node_modules/@types",
      "./node_modules"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}